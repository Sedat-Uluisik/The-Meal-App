<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="food"
            type="com.example.themealapp.model.food.Meal" />
        <variable
            name="clickListener"
            type="com.example.themealapp.clicklistener.ClickListener" />
        <variable
            name="favoriteIcon"
            type="android.graphics.drawable.Drawable" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/food_list_back"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:onClick="@{(v)->clickListener.onItemClick(v, food.idMeal)}">

        <ImageView
            android:id="@+id/imageFood"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:downloadfromurl="@{food.strMealThumb}"/>

        <TextView
            android:id="@+id/food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{food.strMeal}"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/imageFood"
            android:layout_toStartOf="@id/favourite"
            android:layout_marginStart="7dp"/>

        <Button
            android:id="@+id/favourite"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@{favoriteIcon}"
            android:onClick="@{(v)->clickListener.onFavoriteClick(v, food.idMeal)}" />

    </RelativeLayout>
</layout>